<!-- custom_progress_drawable.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:startColor="#7CB342"
                android:centerColor="#7CB342"
                android:centerY="0.75"
                android:endColor="#7CB342"
                android:angle="270" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#F44336"
                    android:centerColor="#F44336"
                    android:centerY="0.75"
                    android:endColor="#F44336"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#FFEB3B"
                    android:centerColor="#FFEB3B"
                    android:centerY="0.75"
                    android:endColor="#FFEB3B"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>
